generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Instrument {
  insCode   String   @id
  isin      String?
  symbol    String?
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  snapshots PriceSnapshotMinute[]
}

model PriceSnapshotMinute {
  id         Int      @id @default(autoincrement())
  insCode    String
  minute     DateTime
  data       Json
  createdAt  DateTime @default(now())

  instrument Instrument @relation(fields: [insCode], references: [insCode], onDelete: Cascade)

  @@index([insCode, minute])
  @@unique([insCode, minute])
}
